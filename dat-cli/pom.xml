                                </goals>
                                <configuration>
                                    <finalName>${project.finalName}</finalName>
                                    <filters combine.children="append">
                                        <filter>
                                            <artifact>com.microsoft.onnxruntime:onnxruntime</artifact>
                                            <excludes>
                                                <exclude>ai/onnxruntime/native/linux-aarch64/**</exclude>
