                                            <excludes>
                                                <exclude>libduckdb_java.so_linux_amd64</exclude>
                                                <exclude>libduckdb_java.so_linux_arm64</exclude>
                                                <exclude>libduckdb_java.so_osx_universal</exclude>
                                            </excludes>
                                        </filter>
                                        <filter>
