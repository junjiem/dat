        <profile>
            <id>pkg:bundled</id>
            <properties>
                <project.finalName>${project.artifactId}-${project.version}${finalName.suffix}</project.finalName>
                <project.package.finalName>${project.finalName}-bundled</project.package.finalName>
                <jlink.jre.outputDirectory>${project.build.directory}/jlink-jre</jlink.jre.outputDirectory>
            </properties>
            <build>
                <plugins>
                    <!-- Maven Shade Plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>shade</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>shade</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Maven Antrun Plugin to execute jlink -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>create-jlink-runtime</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo message="OS: ${os.name} ${os.version} (${os.arch})"/>
                                        <echo message="Creating custom JRE with jlink..."/>
                                        <delete dir="${jlink.jre.outputDirectory}"/>
                                        <exec executable="${java.home}/bin/jlink" failonerror="true">
                                            <arg value="--add-modules"/>
                                            <arg value="java.base,java.compiler,java.desktop,java.instrument,java.logging,java.management,java.naming,java.net.http,java.prefs,java.rmi,java.scripting,java.security.jgss,java.security.sasl,java.sql,java.sql.rowset,java.transaction.xa,java.xml,java.xml.crypto,jdk.crypto.ec,jdk.httpserver,jdk.jfr,jdk.unsupported,jdk.xml.dom,jdk.zipfs"/>
                                            <arg value="--output"/>
                                            <arg value="${jlink.jre.outputDirectory}"/>
                                            <arg value="--compress"/>
                                            <arg value="2"/>
                                            <arg value="--strip-debug"/>
                                            <arg value="--no-header-files"/>
                                            <arg value="--no-man-pages"/>
                                        </exec>
                                        <echo message="Custom JRE created at ${jlink.jre.outputDirectory}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Maven Assembly Plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly-jlink</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <finalName>${project.package.finalName}</finalName>
                                    <descriptors>
                                        <descriptor>assembly-jlink.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

